<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th><%= Answer.human_attribute_name(:code) %></th>
      <th><%= Answer.human_attribute_name(:en) %></th>
      <th><%= Answer.human_attribute_name(:jp) %></th>
      <th><%= Answer.human_attribute_name(:zh) %></th>
      <th><%= Answer.human_attribute_name(:tran) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.code %></td>
        <td><%= answer.en %></td>
        <td><%= answer.jp %></td>
        <td><%= answer.zh %></td>
        <td><%= answer.tran %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

