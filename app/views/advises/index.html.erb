<h1>Advises</h1>

<table>
  <thead>
    <tr>
      <th>En</th>
      <th>Jp</th>
      <th>Zh</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advises.each do |advise| %>
      <tr>
        <td><%= advise.en %></td>
        <td><%= advise.jp %></td>
        <td><%= advise.zh %></td>
        <td><%= link_to 'Show', advise %></td>
        <td><%= link_to 'Edit', edit_advise_path(advise) %></td>
        <td><%= link_to 'Destroy', advise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

